#Elabore um algoritmo, em pseudocódigo e em
#MIPs, que tire a média aritmética simples de
#dois números e apresente o resultado em tela.

.data
	msg1: .asciiz "Digite um numero inteiro: "
	msg2: .asciiz "A media aritmetica é: "

.text
    main:
	li $v0, 4
	la $a0, msg1
	syscall
	
	li $v0, 5
	syscall
	move $t0, $v0
	
	li $v0, 4
	la $a0, msg1
	syscall
	
	li $v0, 5
	syscall
	move $t1, $v0
	
	add $t2, $t0, $t1
	li $t3,2
	div $t2, $t3
	mflo $t4
	
	li $v0, 4
	la $a0, msg2
	syscall
	
	li $v0, 1
	move $a0, $t4
	syscall
	
	li $v0, 10
	syscall